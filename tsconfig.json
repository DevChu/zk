{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "ESNext",
      "dom"
    ],
    "module": "none",
    "allowJs": true,
    "noEmit": true, // type checking only
    "strict": true,
    "useUnknownInCatchVariables": false,
    "noImplicitAny": false, // leave this for js compatible
    "typeRoots": ["./@types/"],
    "types": ["zk"],
  },
  "exclude": [
    "node_modules",
    "zktest",
    "**/build/*",
    "**/codegen/*"
  ]
}