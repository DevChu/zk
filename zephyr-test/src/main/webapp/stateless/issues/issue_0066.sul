<zk xmlns:h="client">
    <script><![CDATA[
		function testcase() {

			var t1 = zk.$('$tree > @treechildren < @tree'),
				failure = false;
			if (!(t1 && t1.widgetName == 'tree'))
				failure = "zk.$('$tree > @treechildren < @tree'";

            if (!failure) {
                t1 = zk.$('@treechildren < @treeitem:nth-child(1)');
                if (!(t1 && t1.getLabel() == 'Root.0'))
                    failure = "zk.$('@treechildren < @treeitem:nth-child(1)')";
            }
            if (!failure) {
                t1 = zk.$('.z-treecell:contains("Root.0.2") < { $tree @treeitem }');
                if (!(t1 && t1.getLabel() == 'Root.0.2'))
                    failure = "zk.$('.z-treecell:contains(\"Root.0.2\") < { $tree @treeitem }')";
            }
			jq('$msg').html(failure ? 'Failure: ' + failure : 'OK');

		}

	]]></script>
    <label style="font-weight: bold" multiline="true">
        1. Click the "Test Button", and you should see a text with "OK".
    </label>
    <button id="btn" label="Test Button" h:onClick="testcase();"/>
    <label id="msg"/>
    <tree id="tree" width="400px" rows="8">
        <treecols sizable="true">
            <treecol label="Name" />
        </treecols>
        <treechildren>
            <treeitem>
                <treerow label="Root.0"/>
                <treechildren>
                    <treeitem>
                        <treerow label="Root.0.0"/>
                    </treeitem>
                    <treeitem>
                        <treerow label="Root.0.1"/>
                    </treeitem>
                    <treeitem>
                        <treerow label="Root.0.2"/>
                    </treeitem>
                </treechildren>
            </treeitem>
            <treeitem>
                <treerow label="Root.1"/>
            </treeitem>
            <treeitem>
                <treerow label="Root.2"/>
            </treeitem>
            <treeitem>
                <treerow label="Root.3"/>
            </treeitem>
            <treeitem>
                <treerow label="Root.4"/>
            </treeitem>
        </treechildren>
    </tree>
</zk>