<?xml version="1.0" encoding="UTF-8"?>
<zk>
	<language-config>
		<addon-uri>/WEB-INF/lang-addon.xml</addon-uri>
	</language-config>
    <listener>
        <listener-class>org.zkoss.clientbind.BinderPropertiesRenderer</listener-class>
    </listener>
	<library-property>
		<name>org.zkoss.bind.defaultComposer.class</name>
		<value>org.zkoss.clientbind.ClientBindComposer</value>
	</library-property>
	<client-config>
		<debug-js>true</debug-js>
	</client-config>
	<!-- for ZKBIND ZK-921	A way to register system level converter and validator  -->
	<library-property>
		<name>org.zkoss.bind.appConverters</name>
		<value>xConverter=org.zkoss.clientbind.test.issue.F00921SystemConverterValidator$XConverter,
			yConverter=org.zkoss.clientbind.test.issue.F00921SystemConverterValidator$YConverter,
			foo=org.zkoss.clientbind.test.book.databinding.converter.FooConverter,bar=org.zkoss.clientbind.test.book.databinding.converter.BarConverter</value>
	</library-property>
	<library-property>
		<name>org.zkoss.bind.appValidators</name>
		<value>xValidator=org.zkoss.clientbind.test.issue.F00921SystemConverterValidator$XValidator,
			yValidator=org.zkoss.clientbind.test.issue.F00921SystemConverterValidator$YValidator</value>
	</library-property>
	<!-- for B80-ZK-3149  -->
	<listener>
		<listener-class>org.zkoss.zktest.test2.B80_ZK_3149ProxyHandler</listener-class>
	</listener>

	<!-- F70-ZK 2079
	Turn on autohide in mesh component -->
	<library-property>
		<name>org.zkoss.zul.grid.autohidePaging</name>
		<value>true</value>
	</library-property>
	<library-property>
		<name>org.zkoss.zul.tree.autohidePaging</name>
		<value>true</value>
	</library-property>
	<library-property>
		<name>org.zkoss.zul.listbox.autohidePaging</name>
		<value>true</value>
	</library-property>

	<library-property>
		<name>org.zkoss.zul.listbox.rod</name>
		<value>true</value>
	</library-property>

	<library-property>
		<name>org.zkoss.zul.grid.rod</name>
		<value>true</value>
	</library-property>

	<library-property>
		<name>org.zkoss.zk.WPD.cache</name>
		<value>false</value>
	</library-property>

	<library-property>
		<name>org.zkoss.zk.WCS.cache</name>
		<value>false</value>
	</library-property>

	<library-property>
		<name>org.zkoss.web.classWebResource.cache</name>
		<value>false</value>
	</library-property>

</zk>