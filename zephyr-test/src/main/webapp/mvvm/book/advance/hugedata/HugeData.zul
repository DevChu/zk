<zk>
	<label multiline="true">
		Load the page, you shall not see any error,
		and the list box shall not be empty.(make sure the demo in mvvm book work)
	</label>
	<window width="400px" viewModel="@id('vm') @init('org.zkoss.clientbind.test.mvvm.book.advance.HugeDataVM')">
		selected Person id:
		<label value="@load(vm.selectedPerson.id)"/>
		<separator/>
		Use custom ListModel:
		<listbox id="lb" model="@bind(vm.personListModel)" selectedItem="@bind(vm.selectedPerson)" rows="10">
			<listhead>
				<listheader label="ID"/>
				<listheader label="First Name"/>
				<listheader label="Last Name"/>
				<listheader label="Age"/>
			</listhead>
			<template name="model">
				<listitem>
					<listcell label="@bind(each.id)"/>
					<listcell label="@bind(each.firstName)"/>
					<listcell label="@bind(each.lastName)"/>
					<listcell label="@bind(each.age)"/>
				</listitem>
			</template>
		</listbox>
		<button id="logBtn" label="show listbox model size" onClick="@command('showModelSize')" />
	</window>
</zk>