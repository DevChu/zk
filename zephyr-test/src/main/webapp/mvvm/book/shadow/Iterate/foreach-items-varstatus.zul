<zk>
    <label multiline="true">
        Check the grid data:
        * Current is an object.
        * Index is 0, 1, 2, 3, 4, 5.
        * Count is index + 1.
        * First: only the first row is true, others false.
        * Last: only the last row is true, others false.
        * All begin / end / step should be 0 / 5 / 1.
    </label>
    <grid viewModel="@('org.zkoss.clientbind.test.mvvm.book.shadow.NavbarVM')">
        <columns>
            <column label="current" hflex="min"/>
            <column label="index"/>
            <column label="count"/>
            <column label="first"/>
            <column label="last"/>
            <column label="begin"/>
            <column label="end"/>
            <column label="step"/>
        </columns>
        <rows>
            <forEach items="@init(vm.menuItems)" varStatus="status">
                <row>
                    <label value="@init(status.current)"/>
                    <label value="@init(status.index)"/>
                    <label value="@init(status.count)"/>
                    <label value="@init(status.first)"/>
                    <label value="@init(status.last)"/>
                    <label value="@init(status.begin)"/>
                    <label value="@init(status.end)"/>
                    <label value="@init(status.step)"/>
                </row>
            </forEach>
        </rows>
    </grid>
</zk>