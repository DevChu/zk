<window viewModel="@id('vm') @init('org.zkoss.clientbind.test.book.basic.CollectionTemplateTabboxVM')">
	<label id="msg" value="@bind(vm.message1)"/>
	<tabbox id="outerbox" width="700px"
			model="@bind(vm.items) @template(each.name eq 'A' or forEachStatus.index eq 2?'model1':'model2')">
		<template name="model1:tab">
			<tab label="@load(forEachStatus.index + each.name + 'Model1')"/>
		</template>
		<template name="model1:tabpanel" var="item" status="s">
			<tabpanel>
				<hlayout>
					<label value="@bind(s.index)"/>
					<label value="@bind(item.name)"/>
					Model1
				</hlayout>
				<hlayout>
					<tabbox hflex="1" model="@bind(item.options)">
						<template name="model:tab" var="option">
							<tab label="@load(optionStatus.index + s.index + option)"/>
						</template>
						<template name="model:tabpanel" var="option">
							<tabpanel>
								<hbox>
									<label value="@bind(optionStatus.index)"/>
									<label value="@bind(s.index)"/>
									<label value="@bind(option)"/>
								</hbox>
							</tabpanel>
						</template>
					</tabbox>
					<button label="Index" onClick="@command('showIndex', index=s.index)"/>
					<button label="Delete" onClick="@command('delete', item=item)"/>
					<button label="Add After" onClick="@command('addAfter', item=item)"/>
					<button label="Add Before" onClick="@command('addBefore', item=item)"/>
				</hlayout>
			</tabpanel>
		</template>
		<template name="model2:tab">
			<tab label="@load(forEachStatus.index + each.name + 'Model2')"/>
		</template>
		<template name="model2:tabpanel" var="item" status="s">
			<tabpanel>
				<hlayout>
					<label value="@bind(s.index)"/>
					<label value="@bind(item.name)"/>
					Model2
				</hlayout>
				<hlayout>
					<tabbox hflex="1" model="@bind(item.options)">
						<template name="model:tab" var="option">
							<tab label="@load(optionStatus.index + s.index + option)"/>
						</template>
						<template name="model:tabpanel" var="option">
							<tabpanel>
								<hbox>
									<label value="@bind(optionStatus.index)"/>
									<label value="@bind(s.index)"/>
									<label value="@bind(option)"/>
								</hbox>
							</tabpanel>
						</template>
					</tabbox>
					<button label="Index" onClick="@command('showIndex', index=s.index)"/>
					<button label="Delete" onClick="@command('delete', item=item)"/>
					<button label="Add After" onClick="@command('addAfter', item=item)"/>
					<button label="Add Before" onClick="@command('addBefore', item=item)"/>
				</hlayout>
			</tabpanel>
		</template>

	</tabbox>

	<hbox>
		<button label="reload" onClick="@command('reload')"/>
		<button label="change1" onClick="@command('change1')"/>
		<button label="change2" onClick="@command('change2')"/>
	</hbox>
	<label multiline="true">
		1.the tab named from "0AModel1", "1BModel2", "2CModel1", "3DModel2"
		2.after click change1, the 1st tab("0AModel2") becomes to "0XModel2", the 2nd item("1BModel1") becomes to
		"1AModel1"
		3.then after click change2, the 1st item("0XModel2") becomes to "0AModel2", the 2nd item("1AModel1") becomes to
		"1BModel1"
	</label>
</window>