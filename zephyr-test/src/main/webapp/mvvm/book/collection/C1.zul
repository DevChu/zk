<?page title="new page title" contentType="text/html;charset=UTF-8"?>
<zk>
	<vbox viewModel="@id('vm') @init('org.zkoss.clientbind.test.book.viewmodel.collection.C1')">
		<label multiline="true">
			c1.
			1. select combobox
			2. content of listbox shall change.
		</label>
		<combobox id="singleBox" visible="@load(vm.single)" model="@bind(vm.listNameList)"
				  selectedItem="@bind(vm.selectedOne)">
			<template name="model" var="n">
				<comboitem label="@bind(n)" value="@bind(n)"/>
			</template>
		</combobox>
		<label value="List Content:"/>
		<listbox id="contentListbox" model="@bind(vm.selectedList)">
			<template name="model" var="f">
				<listitem>
					<listcell label="@bind(f)"/>
				</listitem>
			</template>
		</listbox>
	</vbox>
</zk>