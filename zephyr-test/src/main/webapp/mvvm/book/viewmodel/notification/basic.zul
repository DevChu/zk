<zk>
    <label multiline="true">
        1. You should see three inputbox with data.
        2. Click "Randomize".
        3. The data should be updated.
        4. Click "Reset".
        5. The second and third inputbox should be empty.
    </label>
    <vlayout viewModel="@('org.zkoss.zephyr.test.mvvm.book.viewmodel.notification.BasicVM')">
        <intbox id="id" value="@load(vm.id)" readonly="true"/>
        <textbox id="name" value="@load(vm.name)" readonly="true"/>
        <textbox id="city" value="@load(vm.city)" readonly="true"/>
        <label id="pojo" value="@load(vm.pojo.name)" />
        <button id="ramBtn1" label="Randomize (Asterisk)" onClick="@command('randomizeWithAsterisk')"/>
        <button id="ramBtn2" label="Randomize (Dot)" onClick="@command('randomizeWithDot')"/>
        <button id="reset" label="Reset" onClick="@command('reset')"/>
        <button id="updPojoBtn1" label="update pojo 1" onClick="@command('updatePojo1')"/>
        <button id="updPojoBtn2" label="update pojo 2" onClick="@command('updatePojo2')"/>
        <button id="updPojoBtn3" label="update pojo 3" onClick="@command('updatePojo3')"/>
    </vlayout>
</zk>