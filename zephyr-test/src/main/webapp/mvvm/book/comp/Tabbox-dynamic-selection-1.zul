					<button label="select tab 3" onClick="@command('selectTabByItem',item=vm.tabs[3])"/>
					<label id="selectedItem" value="@bind(vm.selectedItem.name)"/>
				</hlayout>
				<tabbox>
					<tabs children="@load(vm.tabs)">
