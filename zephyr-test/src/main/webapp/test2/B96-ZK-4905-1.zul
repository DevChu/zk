<zk xmlns:w="client">
    <label multiline="true">
        1. Open the selectbox.
        2. Select any item.
        3. Now open the selectbox again.
        4. It should have 2 items ("beep" and "bop").
    </label>
    <div apply="org.zkoss.bind.BindComposer" viewModel="@id('vm') @init('org.zkoss.zktest.test2.B96_ZK_4905VM')">
        <listbox onSelect="@command('doFilter')" mold="select" model="@init(vm.model)">
            <template name="model">
                <listitem label="@load(each)" value="@load(each eq '1')"/>
            </template>
        </listbox>
    </div>
    <button w:onClick="zk.$('@option').firstChild.rerender()" label="click" />
</zk>