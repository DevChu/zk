<zk>
	<label id="info">Scroll to target</label>
	<div id="p">
		<div id="vm" viewModel="@id('vm') @init('org.zkoss.zktest.test2.F95_ZK_4624ScrollVM')" style="overflow:auto"
			 width="500px"
			 height="500px">
			<div>
				<label value="@load(vm.label)"/>
				<button onClick="@command('doScroll')" label="scroll to the text"/>
				<button id="sToList" onClick="@command('doScrollInList')" label="scroll to the text in a List"/>
			</div>
			<div height="900px"/>
			<label id="l2" value="@load(vm.text)"/>
			<button id="sToTopBtn" label="scrollToTop" onClick="@command('doScrollToTop')"/>
			<div id="list" height="60px" style="overflow: auto">
				<vlayout>
					<forEach items="@load(vm.list)">
						<label value="@load(each)"/>
					</forEach>
				</vlayout>
			</div>
		</div>
	</div>
</zk>
