<zk>
	<label>
		The columns with same hflex in these two listboxes should be the same.
	</label>
	<separator />
	<div>listbox with span="false"</div>
	<style>
		.z-listcell-content {
		border: 1px solid black;
		}
	</style>
	<listbox span="false">
		<auxhead>
			<auxheader colspan="2" label="aux 1"/>
			<auxheader colspan="1" label="aux 2"/>
		</auxhead>
		<listhead>
			<listheader hflex="3" label="hflex 3"/>
			<listheader hflex="2" label="hflex 2"/>
			<listheader hflex="1" label="hflex 1"/>
		</listhead>
		<listitem>
			<listcell>cell 1</listcell>
			<listcell>cell 2</listcell>
			<listcell>cell 3</listcell>
		</listitem>
	</listbox>

	<div>listbox with span="true"</div>
	<listbox span="true">
		<auxhead>
			<auxheader colspan="2" label="aux 1"/>
			<auxheader colspan="1" label="aux 2"/>
		</auxhead>
		<listhead>
			<listheader hflex="3" label="hflex 3"/>
			<listheader hflex="2" label="hflex 2"/>
			<listheader hflex="1" label="hflex 1"/>
		</listhead>
		<listitem>
			<listcell>cell 1</listcell>
			<listcell>cell 2</listcell>
			<listcell>cell 3</listcell>
		</listitem>
	</listbox>
</zk>