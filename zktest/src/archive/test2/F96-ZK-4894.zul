<zk xmlns:ca="client/attribute">
    <label multiline="true">
        1. Focus in the textbox and blur, and you should see an errorbox.
        2. Open the combobox.
        3. Use the mouse wheel to scroll.
        4. The errorbox and popup should follow the textbox and combobox.
    </label>
    <div id="content" height="600px" width="800px" style="overflow: auto" ca:data-scrollable="true">
        <div height="300px"/>
        <vlayout>
            <combobox>
                <comboitem label="item 1"/>
                <comboitem label="item 2"/>
                <comboitem label="item 3"/>
                <comboitem label="item 4"/>
                <comboitem label="item 5"/>
            </combobox>
            <textbox constraint="no empty"/>
        </vlayout>
        <div height="1000px"/>
    </div>
</zk>