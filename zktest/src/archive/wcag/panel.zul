<zk xmlns:n="native">
    <style><![CDATA[
    /* FIXME: For demonstration only, should apply to theme itself. */
    :focus {
        box-shadow: inset 0 0 0 1px red;
    }
    ]]>
    </style>
    <n:header>
        <n:h1>Panel</n:h1>
    </n:header>
    <n:main>
        <panel title="Panel: buttons" closable="true" collapsible="true" minimizable="true" maximizable="true">
            <panelchildren>
                Hello world
            </panelchildren>
        </panel>

        <panel closable="true" collapsible="true" minimizable="true" maximizable="true">
            <caption>Panel: buttons with Caption</caption>
            <panelchildren>
                Hello world
            </panelchildren>
        </panel>

        <panel title="Scrollable content" height="200px">
            <panelchildren style="overflow: auto">
                <div height="300px">long long content</div>
            </panelchildren>
        </panel>
    </n:main>
</zk>