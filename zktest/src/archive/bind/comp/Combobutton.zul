<zk>
	<label multiline="true">
		The label will be updated while the combobutton is opened/closed.
	</label>
	<vlayout apply="org.zkoss.bind.BindComposer"
		viewModel="@id('vm') @init('org.zkoss.zktest.bind.comp.Combobutton')">
		<label id="open" value="@load(vm.open)" />
		<combobutton label="combobutton" open="@bind(vm.open)" >
			<popup>
				<vbox>
					<hbox>
						Search
						<textbox />
					</hbox>
					<listbox width="200px">
						<listhead>
							<listheader label="Name" />
							<listheader label="Description" />
						</listhead>
						<listitem>
							<listcell label="John" />
							<listcell label="CEO" />
						</listitem>
						<listitem>
							<listcell label="Joe" />
							<listcell label="Engineer" />
						</listitem>
					</listbox>
				</vbox>
			</popup>
		</combobutton>
	</vlayout>
</zk>