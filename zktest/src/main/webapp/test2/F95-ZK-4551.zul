<zk>
    <label multiline="true">
        Popup
        1. Click the "popup" button.
        2. The popup should be shown right below the textbox.
        Context
        1. Right click the "context" button.
        2. The popup should be shown right below the textbox.
        Tooltip
        1. Hover the "popup" button for a while.
        2. The popup should be shown right below the textbox.
    </label>
    <inputgroup>
        <textbox id="addr"/>
        <button label="popup" popup="pp,ref=addr,position=after_start"/>
        <button label="context" context="pp,ref=addr,position=after_start"/>
        <button label="tooltip" tooltip="pp,ref=addr,position=after_start"/>
    </inputgroup>
    <popup id="pp">
        show something
    </popup>
</zk>
