<zk>
	<label multiline="true">
		Resize the first Column of the 2 listbox, then click the bandbox button to open popup.
		The popup should be opened.
	</label>
	<listbox sizedByContent="true">
		<listhead sizable="true">
			<listheader label="1" />
			<listheader label="2" />
		</listhead>
		<listitem>
			<listcell>
				<bandbox onOpen="Clients.log(event.toString())">
					<bandpopup>
						<window>
							<label value="foo" />
						</window>
					</bandpopup>
				</bandbox>
			</listcell>
		</listitem>
	</listbox>
	<listbox span="true">
		<listhead sizable="true">
			<listheader label="1" />
			<listheader label="2" />
		</listhead>
		<listitem>
			<listcell>
				<bandbox onOpen="Clients.log(event.toString())">
					<bandpopup>
						<window>
							<label value="foo" />
						</window>
					</bandpopup>
				</bandbox>
			</listcell>
		</listitem>
	</listbox>
</zk>