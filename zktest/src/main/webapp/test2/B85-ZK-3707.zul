<div width="600px" height="500px">
    <vlayout vflex="1" hflex="1">
        <label>
            Mouse move on the splitter, the resize icon should be two-direction.
        </label>
        <splitlayout vflex="1" hflex="1">
            <div vflex="1">
                <label value="Area 1"/>
            </div>
            <div vflex="1">
                <label value="Area 2" />
            </div>
        </splitlayout>
        <splitlayout orient="horizontal" vflex="1" hflex="1">
            <div hflex="1">
                <label value="Area 1"/>
            </div>
            <div hflex="1">
                <label value="Area 2" />
            </div>
        </splitlayout>
    </vlayout>
</div>
