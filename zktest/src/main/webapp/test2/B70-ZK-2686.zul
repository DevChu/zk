<zk>
	<label multiline="true">
		1.Click button
		2.Select second and third panel, you see non-zero px border-layout
	</label>
	<button onClick="" label="onResponse causes never opened west-elements to resize to 0px"/>
	<tabbox width="500px" height="300px">
		<custom-attributes org.zkoss.zul.client.rod="false"/>
		<tabs>
			<tab label="tab1"/>
			<tab label="tab2"/>
			<tab label="tab3"/>
		</tabs>
		<tabpanels>
			<tabpanel>
				<borderlayout id="bl1">
					<west title="West" splittable="true" collapsible="true" open="true" size="150px"/>
					<center>CENTER</center>
				</borderlayout>
			</tabpanel>
			<tabpanel>
				<borderlayout id="bl2">
					<west title="West" splittable="true" collapsible="true" open="true" size="200px"/>
					<center>CENTER</center>
				</borderlayout>
			</tabpanel>
			<tabpanel>
				<borderlayout id="bl3">
					<west title="West" splittable="true" collapsible="true" open="true" size="250px"/>
					<center>CENTER</center>
				</borderlayout>
			</tabpanel>
		</tabpanels>
	</tabbox>
</zk>
