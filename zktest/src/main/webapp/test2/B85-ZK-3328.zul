<zk xmlns:w="client">
    <zscript><![CDATA[
	import java.util.Locale;
	import org.zkoss.web.Attributes;
	import org.zkoss.zk.ui.Sessions;
	import org.zkoss.util.Locales;
	import org.zkoss.zk.ui.util.Clients;
	Locale locale = new Locale("zh", "ZH");
	Sessions.getCurrent().setAttribute(Attributes.PREFERRED_LOCALE, locale);
	Clients.reloadMessages(locale);
	Locale old = Locales.setThreadLocal(locale);
]]></zscript>
    <label>Click the btn, and you should see the "ok" in Chinese.</label>
    <button id="btn" label="click" w:onClick="jq.alert('test');"/>
    <button label="reset locale (please click after test)">
        <attribute name="onClick"><![CDATA[
            Sessions.getCurrent().removeAttribute(org.zkoss.web.Attributes.PREFERRED_LOCALE);
            org.zkoss.util.Locales.setThreadLocal(old);
            ]]></attribute>
    </button>
</zk>
