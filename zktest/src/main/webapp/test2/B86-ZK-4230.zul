<zk>
	<label multiline="true">
		1. toolbar should be invisible
		2. click toggle toolbar
		3. toolbar should be visible
		4. click toggle toolbar
		5. toolbar should be invisible
	</label>
	<signature id="signature" toolbarVisible="false" width="600px"/>
	<button label="toggle toolbar"
			onClick="signature.setToolbarVisible(!signature.isToolbarVisible())"/>
</zk>