<zk>
	<div width="100%" height="100%" style="overflow-y: auto">
	    <style>
	    .photo { 
	        border: 1px dashed grey; 
	        border-radius: 10px; 
	        width: 100px; 
	        height: 100px; 
	        background-color: #eee;
	    }
	    .dropzone {
	        border: 1px solid grey;
	        min-height: 100px;
	    }
	    </style>
	    <label multiline="true">
		1. drag a file to gray area
		2. scroll the page down a little
		3. drag a file again
		4. the overlay's position should sync with the anchor
		</label>
	    <separator spacing="100px"/>
	    <div>
	        <image id="img" sclass="photo" />
	        <dropupload maxsize="5000" detection="browser" anchor="${img}" content="Drag your photo here (size &lt; 5000KB)" />
	    </div>
	    <separator spacing="100%"/>
	</div>
</zk>
