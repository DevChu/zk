<zk>
	<zscript>
	isVisible = true;
	</zscript>
	<div style="border:1px solid red;" id="host">
		**Start**
		<if test="${isVisible}">
			<div style="background:yellow">Without Template</div>
		</if>
		**Middle**
		<if test="${not isVisible}">
			<div style="background:green">Without Template</div>
		</if>
		<if test="${isVisible}">
			<div style="background:yellow">Without Template</div>
		</if>
		**End**
	</div>
</zk>